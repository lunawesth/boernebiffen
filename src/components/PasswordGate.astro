---
let correctPassword = "ek"; // Skift til det, du vil bruge
---

<div
  id="password-screen"
  class="flex items-center justify-center min-h-screen bg-gray-100"
>
  <div class="bg-white shadow-xl p-8 rounded-xl max-w-sm w-full space-y-4">
    <h1 class="text-xl font-semibold text-center">
      Adgangskode påkrævet (kode:ek)
    </h1>
    <input
      id="pw-input"
      type="password"
      placeholder="Indtast adgangskode"
      class="w-full border rounded-lg px-3 py-2"
    />

    <button
      id="pw-btn"
      class="w-full bg-orange text-white py-2 rounded-lg cursor-pointer"
    >
      Gå videre
    </button>

    <p id="pw-error" class="text-red-500 text-sm hidden">Forkert adgangskode</p>
  </div>
</div>

<script>
  // Definer korrekt adgangskode direkte i scriptet
  const correct = "ek"; // Sørg for, at dette matcher værdien i Astro-blokken
  const screen = document.querySelector("#password-screen");
  const btn = document.querySelector("#pw-btn");
  const input = document.querySelector("#pw-input");
  const err = document.querySelector("#pw-error");

  btn.addEventListener("click", () => {
    if (input.value === correct) {
      localStorage.setItem("access", "granted");
      screen.style.display = "none";
    } else {
      err.classList.remove("hidden");
    }
  });
</script>
